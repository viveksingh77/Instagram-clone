<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_4mdp"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/view01"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="@+id/postPic"
        app:layout_constraintEnd_toEndOf="@+id/postPic"
        app:layout_constraintStart_toStartOf="@+id/postPic"
        app:layout_constraintTop_toTopOf="@id/postPic" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/postPic"
        android:layout_width="@dimen/_60mdp"
        android:layout_height="@dimen/_60mdp"
        android:padding="3dp"
        android:src="@drawable/vivek"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notify"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4mdp"
        android:text="iswherevivek mention you in their story"
        android:textColor="@color/black"
        android:textSize="@dimen/_13font_mdp"
        app:layout_constraintBottom_toBottomOf="@+id/view01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view01"
        app:layout_constraintTop_toTopOf="@+id/view01"
        app:layout_constraintVertical_bias="0.26" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:12 pm"
        android:layout_margin="@dimen/_4mdp"
        app:layout_constraintStart_toEndOf="@+id/view01"
        app:layout_constraintTop_toBottomOf="@+id/notify" />

</androidx.constraintlayout.widget.ConstraintLayout>